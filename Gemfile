source 'https://rubygems.org'

ruby '2.5.0'

# rspec for testing
gem 'rspec', '~> 3.6'

# rubocop code analyzer based on Ruby style guide
gem 'rubocop', require: false

# RuboCop extension for RSpec
gem 'rubocop-rspec'

# pry-byebug debugger
gem 'pry-byebug'

# Code coverage for Ruby
gem 'simplecov', require: false
